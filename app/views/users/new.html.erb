<% provide(:title, 'Sign up') %>

<h1>Sign up</h1>

<div class="row">
    <div class = "col-sm-6 col-sm-offset-3">
    <!--div class="span6 offset3"-->

        <%= form_for(@user) do |f| %>

            <%= render 'shared/error_messages', object: f.object %>

            <%= render 'fields', f: f %>

            <p><%= f.submit "Create my account", class: "btn btn-lg btn-primary" %></p>

        <% end %>


    </div>
</div>
